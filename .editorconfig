# EditorConfig — consistent formatting for multiple file types
root = true

# Default settings
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Plain text files
[*.txt]
indent_style = space
indent_size = 2
max_line_length = 100

# Docker Compose and Kubernetes YAMLs
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120
# Allow long container image lines without trimming trailing whitespace in YAMLs
trim_trailing_whitespace = false

# Dockerfile
[Dockerfile*]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 160

# JSON files
[*.json]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

# JavaScript / TypeScript / Node
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_style = space
indent_size = 2
charset = utf-8
max_line_length = 100

# Package manager lockfiles — keep exact formatting
[package-lock.json,yarn.lock,pnpm-lock.yaml]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 0

# Markdown & README
[*.{md,markdown,README}]
indent_style = space
indent_size = 2
max_line_length = 80
trim_trailing_whitespace = false

# Makefiles use tabs
[Makefile]
indent_style = tab

# Scripts / CI configs (allow longer lines)
[.github/*, .gitlab-ci.yml, Jenkinsfile]
max_line_length = 160
trim_trailing_whitespace = false

# Binary files — ignore
[*.png,*.jpg,*.jpeg,*.gif,*.ico,*.pdf,*.zip]
trim_trailing_whitespace = false
insert_final_newline = false

